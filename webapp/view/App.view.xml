<mvc:View
  controllerName="demo.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page title="Purchase Order Approval">
    <content>
      <List id="poList" items="{/PurchaseOrders}">
        <StandardListItem
          title="{PO_ID}"
          description="{Vendor} - {Status}"
          info="{Amount}"
          infoState="Success"
        />
      </List>
    </content>
  </Page>
</mvc:View>
